<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    >

    <ImageView
        android:id="@+id/pokemon_row_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="10dp"
        tools:background="#00ff00"
        />
    <TextView
        android:id="@+id/pokemon_row_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/pokemon_row_image"
        android:textSize="30sp"
        tools:text="Charzard"
        />
    <TextView
        android:id="@+id/pokemon_row_id_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textSize="36sp"
        android:padding="10dp"
        tools:text="6"
        />
        <TextView
            android:id="@+id/pokemon_row_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pokemon_row_name"
            android:layout_toEndOf="@id/pokemon_row_image"
            android:textSize="20sp"
            android:layout_marginEnd="10dp"
            android:text="@string/pokemon_weight"
            tools:text="Wt: 350"
            />
    <TextView
        android:id="@+id/pokemon_row_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pokemon_row_name"
        android:layout_toEndOf="@id/pokemon_row_weight"
        android:textSize="20sp"
        android:text="@string/pokemon_height"
        tools:text="Ht: 12"
        />
</RelativeLayout>